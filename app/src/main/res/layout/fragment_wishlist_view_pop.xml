<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#B8B4B4"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Funko Pop Details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Funko Pop Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/imgFunkoPop"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/funko_pop_image"
                android:background="@color/white" />
        </androidx.cardview.widget.CardView>

        <!-- Name and Number Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Name - View Mode -->
                <TextView
                    android:id="@+id/tvFunkoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Funko Pop Name"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Name - Edit Mode -->
                <EditText
                    android:id="@+id/editFunkoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Funko Pop Name"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@android:drawable/edit_text"
                    android:padding="8dp"
                    android:visibility="gone" />

                <!-- Number - View Mode -->
                <TextView
                    android:id="@+id/tvFunkoNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="#000"
                    android:textColor="#6D738C"
                    android:textSize="18sp" />

                <!-- Number - Edit Mode -->
                <EditText
                    android:id="@+id/editFunkoNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="000"
                    android:textColor="#6D738C"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:background="@android:drawable/edit_text"
                    android:padding="8dp"
                    android:visibility="gone" />

                <!-- Rarity Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rarity: "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBarRarity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="0"
                        android:isIndicator="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:progressTint="#FFD700"
                        android:secondaryProgressTint="#E0E0E0" />

                    <TextView
                        android:id="@+id/tvRarityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="(0.0)"
                        android:textColor="#6D738C"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Additional Information Section-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Information"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Purchase Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Purchase Date:"
                        android:textColor="#6D738C"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvPurchaseDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="N/A"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Purchase Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Purchase Price:"
                        android:textColor="#6D738C"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvPurchasePrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Current Value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Current Value:"
                        android:textColor="#6D738C"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvCurrentValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Condition -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Condition:"
                        android:textColor="#6D738C"
                        android:textSize="14sp" />

                    <!-- Condition - View Mode -->
                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mint"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <!-- Condition - Edit Mode -->
                    <Spinner
                        android:id="@+id/spinnerCondition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Notes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes:"
                    android:textColor="#6D738C"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <!-- Notes - View Mode -->
                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No notes available"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:minHeight="60dp"
                    android:padding="8dp"
                    android:background="#F0F0F0" />

                <!-- Notes - Edit Mode -->
                <EditText
                    android:id="@+id/editNotes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="top|start"
                    android:padding="8dp"
                    android:background="@android:drawable/edit_text"
                    android:inputType="textMultiLine"
                    android:hint="Add notes here..."
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAddToWishlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Add to Collection"
                android:textColor="@color/white"
                android:backgroundTint="#6D738C"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawableTint="@color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:backgroundTint="#6D738C"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawableTint="@color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:text="Delete Funko Pop"
            android:textColor="@color/white"
            android:backgroundTint="#D32F2F"
            android:drawableStart="@android:drawable/ic_menu_delete"
            android:drawableTint="@color/white" />

    </LinearLayout>
</ScrollView>